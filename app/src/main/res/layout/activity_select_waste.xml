<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="3"
    android:columnCount="3"
    android:background="#55c092"
    tools:context="com.hfad.carlostest.formularioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R-CYCLO"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:textSize="36dp"
        android:textColor="#d8e4af"
        />

    <ImageButton
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/papel" />

    <ImageButton
        android:id="@+id/plastic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/plastico"    />

    <ImageButton
        android:id="@+id/glass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/vidrio"     />

    <ImageButton
        android:id="@+id/tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/lata"   />

</GridLayout>