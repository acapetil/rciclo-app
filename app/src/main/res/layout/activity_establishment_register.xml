<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="4"
    android:background="#55c092"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="FORMULARIO DE REGISTRO"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nombre"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Correo"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:inputType="textPassword"
            android:hint="ContraseÃ±a"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Fono"
            android:inputType="number"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Direccion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Tipo de desecho"
            android:textSize="17dp" />


                <RadioGroup
                    android:layout_row="7"
                    android:layout_column="1"
                    android:id="@+id/waste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Papel"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:id="@+id/papel"
                        android:layout_row="7"
                        android:layout_columnSpan="3"
                        android:layout_column="1" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plastico"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:id="@+id/plastico"
                        android:layout_column="1"
                        android:layout_columnSpan="3"
                        android:layout_row="8"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vidrio"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:id="@+id/vidrio"
                        android:layout_row="9"
                        android:layout_columnSpan="3"
                        android:layout_column="1" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lata"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:id="@+id/lata"
                        android:layout_row="10"
                        android:layout_columnSpan="3"
                        android:layout_column="1" />

                </RadioGroup>

                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_row="11"
                    android:layout_column="1"
                    android:layout_columnSpan="3"
                    android:text="Registrarse"
                    android:onClick="sendForm"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center"
                    android:layout_row="11"
                    android:layout_columnSpan="3"
                    android:layout_column="1"
                    android:src="@drawable/logito2"
                    />

            </GridLayout>

        </ScrollView>